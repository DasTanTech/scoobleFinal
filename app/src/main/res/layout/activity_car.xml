<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".carActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:background="@color/colorWhite"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/car_company"
                        android:layout_marginTop="@dimen/_85sdp"
                        android:layout_marginBottom="@dimen/_45sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rotation="270"

                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_40sdp"
                        android:textStyle="bold"
                        android:layout_marginLeft="-30dp"
                        android:layout_marginRight="-40dp"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_200sdp">

                        <ImageView
                            android:id="@+id/car_imageView"
                            android:layout_marginTop="@dimen/_40sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/demo_car"/>
                    </RelativeLayout>





                </LinearLayout>
                <TextView
                    android:id="@+id/car_model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_below="@id/one"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:layout_marginLeft="@dimen/_15sdp"/>
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/car_saveBtn"
                    android:layout_width="@dimen/_36sdp"
                    android:layout_height="@dimen/_36sdp"
                    app:fabCustomSize="@dimen/_36sdp"

                    android:layout_gravity="center"
                    android:scaleType="center"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/_25sdp"
                    android:layout_marginTop="-18dp"
                    android:layout_below="@id/one"
                    app:elevation="@dimen/_15sdp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimary"
                android:layout_margin="@dimen/_5sdp"/>

            <TextView
                android:id="@+id/car_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="23000 $"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_15sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="/ mon"
                android:textSize="@dimen/_14sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:textStyle="bold"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Features"
                android:layout_marginTop="@dimen/_15sdp"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="@dimen/_15sdp"/>


            <HorizontalScrollView

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_15sdp"
                        app:cardElevation="@dimen/_35sdp"
                        app:cardBackgroundColor="@color/colorAccent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="@dimen/_46sdp"
                                android:layout_height="@dimen/_46sdp"
                                android:src="@drawable/ic_speed"
                                android:layout_margin="@dimen/_15sdp"/>

                            <TextView
                                android:id="@+id/car_speed"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"
                                android:textSize="@dimen/_14sdp"
                                android:gravity="center"
                                android:layout_marginBottom="@dimen/_5sdp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_15sdp"
                        app:cardElevation="@dimen/_35sdp"
                        app:cardBackgroundColor="@color/colorAccent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="@dimen/_46sdp"
                                android:layout_height="@dimen/_46sdp"
                                android:src="@drawable/ic_seat"
                                android:layout_margin="@dimen/_15sdp"/>

                            <TextView
                                android:id="@+id/car_seats"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"
                                android:textSize="@dimen/_14sdp"
                                android:gravity="center"
                                android:layout_marginBottom="@dimen/_5sdp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_15sdp"
                        app:cardElevation="@dimen/_35sdp"
                        app:cardBackgroundColor="@color/colorAccent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="@dimen/_46sdp"
                                android:layout_height="@dimen/_46sdp"
                                android:src="@drawable/ic_sym_motor"
                                android:layout_margin="@dimen/_15sdp"/>

                            <TextView
                                android:id="@+id/car_engine"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"
                                android:textSize="@dimen/_14sdp"
                                android:gravity="center"
                                android:layout_marginBottom="@dimen/_5sdp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>



                </LinearLayout>



            </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:layout_marginTop="@dimen/_15sdp"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="@dimen/_15sdp"/>

            <TextView
                android:layout_marginBottom="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bavarian Motor Works, commonly known as BMW is a German based luxury automobile company which manufactures premium cars, motorcycles and engines. Founded in 1916, BMW initially produced aircraft-engines and later switched to motorcycle production in 1923 followed by automobile manufacturing in 1928-1929."
                android:textSize="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:textStyle="bold"/>



        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/car_bookBtn"
        android:elevation="@dimen/_15sdp"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_20sdp"
        android:text="Book"
        android:textStyle="bold"
        android:textSize="@dimen/_16sdp"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/btn_bg3"
        android:textColor="@color/colorWhite"/>









</RelativeLayout>