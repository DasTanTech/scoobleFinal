<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".agencyFragments.agencyProfileFragment">

    <LinearLayout
        android:id="@+id/login_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="@dimen/_85sdp"
            android:layout_marginBottom="@dimen/_45sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="270"
            android:text="Profile"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_40sdp"
            android:textStyle="bold"
            android:layout_marginLeft="-40dp"
            android:layout_marginRight="-40dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Car Agency"
                android:textSize="@dimen/_25sdp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/login_one">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/agencyProfileFrag_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:textColorHint="@color/colorAccent"
            app:startIconTint="#FFFFFF">

            <com.google.android.material.textfield.TextInputEditText
                android:editable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#00ffffff"
                android:hint="Agency Name"
                android:text="Sai Ram Dealers"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                android:textColorHighlight="#FFFFFF"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/agencyProfileFrag_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:textColorHint="@color/colorAccent"
            app:startIconTint="#FFFFFF">

            <com.google.android.material.textfield.TextInputEditText
                android:editable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#00ffffff"
                android:hint="Agency Email"
                android:text="srd@gmail.com"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                android:textColorHighlight="#FFFFFF"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/agencyProfileFrag_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:textColorHint="@color/colorAccent"
            app:startIconTint="#FFFFFF">

            <com.google.android.material.textfield.TextInputEditText
                android:editable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#00ffffff"
                android:hint="Agency Phone"
                android:text="8688964344"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                android:textColorHighlight="#FFFFFF"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/agencyProfileFrag_editProfileBtn"
                android:elevation="@dimen/_15sdp"
                android:background="@drawable/btn_bg2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:textSize="@dimen/_15sdp"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_margin="@dimen/_15sdp"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/agencyProfileFrag_logoutBtn"
                android:elevation="@dimen/_15sdp"
                android:background="@drawable/btn_bg3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textSize="@dimen/_15sdp"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_margin="@dimen/_15sdp"
                android:textColor="@color/colorWhite" />

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>